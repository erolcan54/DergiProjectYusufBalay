@model Blog
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5">
                        <!-- Product image -->
                        <a href="javascript: void(0);" class="text-center d-block mb-4">
                            <img src="@ByteToImage.DecodeImage(Model.Resim)" class="img-fluid" style="max-width: 300px; max-height:400px; overflow:auto;" alt="Product-img">
                        </a>
                    </div> <!-- end col -->
                    <div class="col-lg-7">
                        <form class="ps-lg-4">
                            <!-- Product title -->
                            <h3 class="mt-0">@Model.Baslik</h3>
                            <p class="mb-1">Eklenme Tarihi : @Convert.ToDateTime(Model.CreatedDate).ToLongDateString()</p>

                            <!-- Product description -->
                            <div class="mt-4">
                                <p>@Html.Raw(Model.Konu)</p>
                            </div>
                            <hr />
                            <!-- Product information -->
                            <div class="mt-4">
                                <div class="row">
                                    <div class="col-md-4">
                                        <h6 class="font-14">Görüntüleme Sayısı :</h6>
                                        <p class="text-sm lh-150">@Model.Hit</p>
                                    </div>
                                    @if (Model.UpdatedDate != null)
                                    {
                                        <div class="col-md-4">
                                        <h6 class="font-14">Güncelleme Tarihi:</h6>
                                        <p class="text-sm lh-150">@Convert.ToDateTime(Model.UpdatedDate).ToLongDateString()</p>
                                    </div>
                                    }
                                </div>
                            </div>

                        </form>
                    </div> <!-- end col -->
                </div> <!-- end row-->
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col-->
</div>


