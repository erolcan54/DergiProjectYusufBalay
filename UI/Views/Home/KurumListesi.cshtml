@model List<KurumDisplayDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">KURUM LİSTESİ</h4>
            <p class="text-muted font-14">Arama yaptığınız kriterlere uygun kurumlar aşağıda listelenmiştir.</p>
            @if (Model.Count > 0)
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 col-xxl-3">
                            <!-- project card -->
                            <div class="card d-block">
                                <!-- project-thumbnail -->
                                <a href="@Url.Action("KurumDetay","Home",new {id=item.Id})">
                                    <img class="card-img-top" height="200px" src="@ByteToImage.DecodeImage(item.Resim)" alt="blog image cap">
                                </a>
                                <div class="card-body position-relative">
                                    <h5>@item.Ad</h5>
                                    <p class="mb-1">
                                        <span class="pe-2 text-muted">
                                            <b>@item.ilAdi / @item.ilceAdi</b>
                                        </span>
                                    </p>
                                    <p class="mb-1">
                                        <span class="pe-2 text-muted">
                                            <b>Görüntülenme  : @item.TikSayisi</b>
                                        </span>
                                    </p>
                                    <p>
                                        <a href="@Url.Action("KurumDetay","Home",new {id=item.Id})" class="btn btn-sm btn-dark">Detay</a>
                                    </p>
                                </div>
                            </div> <!-- end card-->
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                    <strong>Uyarı - </strong> Aradığınız kriterlere uygun kurum bulunamamıştır.
                </div>
            }
        </div>
    </div>
</div>



