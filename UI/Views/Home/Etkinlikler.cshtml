@model List<Etkinlik>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var kurumId = HttpContextAccessor.HttpContext.Session.GetString("HomeKurumId");
}
<div class="row mb-2">
    <div class="col-sm-4">
        <a href="@Url.Action("KurumDetay","Home",new {id=int.Parse(kurumId)})" class="btn btn-danger mb-2"> Kurum Detay Sayfası</a>
    </div>
</div>
<div class="row mt-1">
    <!-- Right Sidebar -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mt-1">
                    @if (Model.Count > 0)
                    {
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-xxl-3">
                                    <!-- project card -->
                                    <div class="card d-block">

                                        <div class="card-body position-relative">
                                            <!-- project title-->
                                            <h4 class="mt-0">
                                                <a href="/Home/EtkinlikDetay/@item.Id" class="text-title">@item.Baslik</a>
                                            </h4>

                                            @if (item.UpdatedDate != null)
                                            {
                                                <p class="mb-3">
                                                    <span class="pe-2 text-nowrap">
                                                        <i class="mdi mdi-update"></i>
                                                        <b>@item.UpdatedDate</b>
                                                    </span>
                                                </p>
                                            }
                                            <div class="mb-1">
                                                
                                                <a href="@Url.Action("EtkinlikDetay","Home",new {id=item.Id })" class="btn btn-info btn-sm ">Detay</a>
                                            </div>
                                        </div> <!-- end card-body-->
                                    </div> <!-- end card-->
                                </div> <!-- end col -->
                            }
                        </div>
                    }
                    else
                    {
                        <div class="body">
                            <div class="card-body">
                                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                                    <strong>Uyarı - </strong> Etkinlik listesi boş.
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- end row-->
            </div>
            <!-- end inbox-rightbar-->
        </div>
        <!-- end card-body -->
        <div class="clearfix"></div>
    </div> <!-- end card-box -->

</div> <!-- end Col -->


@section Scripts{


    <script>
        $(window).on('load',
            function () {
                $('#loading').hide();
            });
    </script>
}







