@model List<UcretsizDanismanDisplayDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="card">
        <div class="card-body">
            @if (Model.Count > 0)
            {
                <table id="datatable" class="table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Telefon</th>
                            <th>Email</th>
                            <th>İl Adı</th>
                            <th>İlçe Adı</th>
                            <th>Okul</th>
                            <th>Kurs</th>
                            <th>Eklenme Tarihi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="table-user">
                                    @item.AdSoyad
                                </td>
                                <td>
                                    @item.Telefon
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.ilAdi
                                </td>
                                <td>
                                    @item.ilceAdi
                                </td>
                                <td>
                                    @if(item.OkulMu){
                                        <span class="badge bg-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hayır</span>
                                    }
                                </td>
                                <td>
                                    @if (item.KursMu)
                                    {
                                        <span class="badge bg-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Hayır</span>
                                    }

                                </td>
                                <td>
                                    @Convert.ToDateTime(item.CreatedDate).ToShortDateString()
                                </td>

                                <td>
                                    <a href="#" data-id="@item.Id" id="btnbasvurusil" class="action-icon text-danger"> <i class="mdi mdi-delete"></i> </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="body">
                    <div class="card-body">
                        <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                            <strong>Uyarı - </strong> Ücretsiz Danışman Başvuru listesi boş.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#datatable').DataTable({
            "ordering": false
        });
        $(document).on("click", "#btnbasvurusil", function () {
            var id = $(this).data("id");
            swal({
                title: "UYARI",
                text: "Başvuru bilgilerini silmek istediğinize emin misiniz?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: 'btn-danger',
                cancelButtonClass: 'btn-success',
                confirmButtonText: "EVET",
                cancelButtonText: "HAYIR",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '/Admin/UcretsizDanismanBasvuruSil/' + id,
                    type: 'POST',
                    success: function (result) {
                        if (result.Success == true) {
                            swal({
                                title: "BAŞARILI!",
                                type: "success",
                                text: result.Message,
                                confirmButtonClass: 'btn-success',
                                confirmButtonText: "Tamam"
                            }, function (isConfirm) {
                                if (isConfirm) {
                                    window.location.href = '@Url.Action("UcretsizDanisman", "Admin")';
                                }
                            });
                        }
                        else {
                            swal({
                                title: 'HATA',
                                text: result.Message,
                                type: 'error',
                                confirmButtonClass: 'btn-danger',
                                confirmButtonText: 'Tamam',
                            });
                        }
                    }
                });
            });
        });
    </script>
}



