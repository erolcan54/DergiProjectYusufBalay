@model KurumDisplayDto
@{
    ViewData["Title"] = "KurumDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">@Model.Ad</h4>
        </div>
    </div>
</div>

<div class="row">
    <!-- Right Sidebar -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Left sidebar -->
                <div class="page-aside-left">
                    <div class="d-grid">
                        <button type="button" class="btn btn-danger">Bilgileri Güncelle</button>
                    </div>
                    <div class="email-menu-list mt-3">
                        <a href="@Url.Action("KurumDetay","Admin",new {id=Model.Id})" class="text-danger fw-bold"><i class="dripicons-star me-2"></i>Okul Anasayfa</a>
                        <a href="@Url.Action("KurumGuncelle","Admin",new{id=Model.Id})"><i class="dripicons-star me-2"></i>Kullanıcılar</a>
                        <a href="javascript: void(0);"><i class="dripicons-star me-2"></i>Öğretmen Kadrosu</a>
                        <a href="javascript: void(0);"><i class="dripicons-clock me-2"></i>Eğitim Modeli</a>
                        <a href="javascript: void(0);"><i class="dripicons-document me-2"></i>Başarılar<span class="badge badge-info-lighten float-end ms-2">32</span></a>
                        <a href="javascript: void(0);"><i class="dripicons-exit me-2"></i>Kataloglar</a>
                        <a href="javascript: void(0);"><i class="dripicons-trash me-2"></i>İç Görsel</a>
                        <a href="javascript: void(0);"><i class="dripicons-tag me-2"></i>Dış Görsel</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Etkinlikler</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Kulüpler</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Tanıtım Videosu</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Hakkında</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Yorumlar</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>İndirimler</a>
                        <a href="javascript: void(0);"><i class="dripicons-warning me-2"></i>Bursluluk Sınavları</a>
                    </div>

                </div>
                <!-- End Left sidebar -->

                <div class="page-aside-right">
                    <div class="mt-3">
                        <div class="row mb-2">
                            <img src="@ByteToImage.DecodeImage(Model.Resim)" class="img-fluid" style="max-width: 280px;" alt="Product-img">
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Ad : </div>
                            <div class="col-md-9">@Model.Ad.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">İl : </div>
                            <div class="col-md-9">@Model.ilAdi.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">İlçe : </div>
                            <div class="col-md-9">@Model.ilceAdi.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Adres : </div>
                            <div class="col-md-9">@Model.Adres</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Telefon : </div>
                            <div class="col-md-9">@Model.Telefon</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Web : </div>
                            <div class="col-md-9">@Model.Web</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Email : </div>
                            <div class="col-md-9">@Model.Email</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Eklenme Tarihi : </div>
                            <div class="col-md-9">@Convert.ToDateTime(Model.CeratedDate).ToShortDateString() - @Convert.ToDateTime(Model.CeratedDate).ToShortTimeString()</div>
                        </div>
                        @if (Model.EgitimTurId == 1)
                        {
                            <div class="row mb-2">
                                <div class="col-md-3 d-flex justify-content-end">Okul Türü : </div>
                                <div class="col-md-9">@Model.OkulTurAdi</div>
                            </div>
                        }
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Durum : </div>
                            <div class="col-md-9">
                                @if (Model.Status)
                                {
                                    <span class="badge badge-success-lighten">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger-lighten">Pasif</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Görüntülenme Sayısı : </div>
                            <div class="col-md-9">@Model.TikSayisi</div>
                        </div>

                    </div>
                    <!-- end row-->
                </div>
                <!-- end inbox-rightbar-->
            </div>
            <!-- end card-body -->
            <div class="clearfix"></div>
        </div> <!-- end card-box -->

    </div> <!-- end Col -->
</div>
