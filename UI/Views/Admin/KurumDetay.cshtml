@model KurumDisplayDto
@{
    ViewData["Title"] = "KurumDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">@Model.Ad</h4>
        </div>
    </div>
</div>

<div class="row">
    <!-- Right Sidebar -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Left sidebar -->
                <div class="page-aside-left">
                    @await Component.InvokeAsync("KurumMenu",new {id=Model.Id})

                </div>
                <!-- End Left sidebar -->

                <div class="page-aside-right">
                    <div class="mt-3">
                        <div class="row mb-2">
                            <img src="@ByteToImage.DecodeImage(Model.Resim)" class="img-fluid" style="max-width: 280px;" alt="Product-img">
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Ad : </div>
                            <div class="col-md-9">@Model.Ad.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">İl : </div>
                            <div class="col-md-9">@Model.ilAdi.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">İlçe : </div>
                            <div class="col-md-9">@Model.ilceAdi.ToUpper()</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Adres : </div>
                            <div class="col-md-9">@Model.Adres</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Telefon : </div>
                            <div class="col-md-9">@Model.Telefon</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Web : </div>
                            <div class="col-md-9">@Model.Web</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Email : </div>
                            <div class="col-md-9">@Model.Email</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Eklenme Tarihi : </div>
                            <div class="col-md-9">@Convert.ToDateTime(Model.CeratedDate).ToShortDateString() - @Convert.ToDateTime(Model.CeratedDate).ToShortTimeString()</div>
                        </div>
                        @if (Model.EgitimTurId == 1)
                        {
                            <div class="row mb-2">
                                <div class="col-md-3 d-flex justify-content-end">Okul Türü : </div>
                                <div class="col-md-9">@Model.OkulTurAdi</div>
                            </div>
                        }
                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Durum : </div>
                            <div class="col-md-9">
                                @if (Model.Status)
                                {
                                    <span class="badge badge-success-lighten">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger-lighten">Pasif</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-3 d-flex justify-content-end">Görüntülenme Sayısı : </div>
                            <div class="col-md-9">@Model.TikSayisi</div>
                        </div>

                    </div>
                    <!-- end row-->
                </div>
                <!-- end inbox-rightbar-->
            </div>
            <!-- end card-body -->
            <div class="clearfix"></div>
        </div> <!-- end card-box -->

    </div> <!-- end Col -->
</div>
