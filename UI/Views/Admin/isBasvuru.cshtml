@model List<isBasvuruDisplayDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-1">
    <!-- Right Sidebar -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mt-2">
                    <div class="row">
                    </div>
                    @if (Model.Count > 0)
                    {
                        <table id="alternative-page-datatable" class="table dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>İl Adı</th>
                                    <th>Branş Adı</th>
                                    <th>Kayıt Tarihi</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AdSoyad</td>
                                        <td>@item.ilAdi</td>
                                        <td>@item.BransAdi</td>
                                        <td>@Convert.ToDateTime(item.CreatedDate).ToShortDateString()</td>
                                        <td>@item.Email</td>
                                        <td>@item.Telefon</td>
                                        <td>
                                            <a href="@Url.Action("OgretmenDetay","Admin",new {id=item.Id})" class="btn btn-sm btn-info">Detay</a>
                                            <a href="#" id="btnisBasvuruSil" data-id="@item.Id" class="btn btn-danger btn-sm ">Sil</a>
                                                <a href="@Url.Action("isBasvuruGuncelle","Admin",new {id=item.Id })" class="btn btn-success btn-sm ">Güncelle</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="body">
                            <div class="card-body">
                                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                                    <strong>Uyarı - </strong> İş başvurusu yapan öğretmen listesi boş.
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <!-- end row-->
            </div>
            <!-- end inbox-rightbar-->
        </div>
        <!-- end card-body -->
        <div class="clearfix"></div>
    </div> <!-- end card-box -->
</div> <!-- end Col -->
@section Scripts{

    <script>
        $(window).on('load',
            function () {
                $('#loading').hide();
            });

        $(document).on("click", "#btnisBasvuruSil", function () {
            var id = $(this).data("id");
            swal({
                title: "UYARI",
                text: "İş Başvuru bilgilerini silmek istediğinize emin misiniz?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: 'btn-danger',
                cancelButtonClass: 'btn-success',
                confirmButtonText: "EVET",
                cancelButtonText: "HAYIR",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '/Admin/isBasvuruSil/' + id,
                    type: 'POST',
                    success: function (result) {
                        if (result.Success == true) {
                            swal({
                                title: "BAŞARILI!",
                                type: "success",
                                text: result.Message,
                                confirmButtonClass: 'btn-success',
                                confirmButtonText: "Tamam"
                            }, function (isConfirm) {
                                if (isConfirm) {
                                    window.location.href = '@Url.Action("isBasvuru", "Admin")';
                                }
                            });
                        }
                        else {
                            swal({
                                title: 'HATA',
                                text: result.Message,
                                type: 'error',
                                confirmButtonClass: 'btn-danger',
                                confirmButtonText: 'Tamam',
                            });
                        }
                    }
                });
            });
        });
    </script>
}