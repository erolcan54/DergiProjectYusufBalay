@model List<Blog>

<div class="row">
    <div class="card">
        <div class="card-body">
            <h3 class="header-title">EĞİTİM İÇERİKLERİ / BLOG</h3><br />
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-3 col-xxl-3">
                        <!-- project card -->
                        <div class="card d-block" style="max-width:250px;">
                            <!-- project-thumbnail -->
                            <a href="@Url.Action("BlogDetail","Home",new {id=item.Id})">
                                <img class="card-img-top" style="height:200px;" src="@ByteToImage.DecodeImage(item.Resim)" alt="blog image cap">
                            </a>
                            <div class="card-body position-relative">
                                <div class="card-body position-relative text-center">
                                    <!-- project title-->
                                    <p>
                                        <a href="@Url.Action("BlogDetail","Home",new {id=item.Id})" class="text-title text-dark"><strong>@item.Baslik</strong></a>
                                    </p>
                                    <p>
                                        <span class="pe-2 text-muted">
                                            <span class="badge badge-warning-lighten text-dark font-12">
                                                <strong>
                                                    @item.AdSoyad
                                                </strong>
                                            </span>
                                        </span>
                                    </p>
                                    <!-- project detail-->
                                    <p>
                                        <span class="badge badge-warning-lighten text-dark font-12">
                                            <i class="mdi mdi-eye"></i><strong>
                                                @item.Hit kez görüntülendi.
                                            </strong>
                                        </span>
                                    </p>
                                    <p><a href="@Url.Action("BlogDetail","Home",new {id=item.Id})" class="btn btn-sm btn-dark text-warning"><strong><i class="uil uil-corner-down-right"></i> İncele</strong></a></p>
                                </div>
                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div>
                }
            </div>
            @if (Model.Count > 0)
            {
                <div class="float-end"><a href="@Url.Action("BlogListesi","Home")" class="btn btn-warning btn-sm text-dark"><strong>Tümünü Gör</strong></a></div>
            }
        </div>
    </div>
</div>