@model List<Blog>

<div class="row">
    <div class="card">
        <div class="card-body">
            <h3 class="header-title">EĞİTİM İÇERİKLERİ / BLOG</h3><br />
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-sm-6 col-md-3 col-xxl-3">
                        <!-- project card -->
                        <div class="card d-block">
                            <!-- project-thumbnail -->
                            <div>
                                <a href="@Url.Action("BlogDetail","Home",new {id=item.Id})">
                                    <img class="card-img-top" style="max-height:150px;overflow:auto;object-fit:contain;" src="@ByteToImage.DecodeImage(item.Resim)" alt="blog image cap">
                                </a>
                            </div>
                                
                           
                            <div class="card-body">

                                    <div class="chart-widget-list mt-1 text-center">
                                        <p><strong><a href="@Url.Action("BlogDetail","Home",new {id=item.Id})" class="text-title text-dark"><strong>@item.Baslik</strong></a></strong></p>
                                        <p>@item.AdSoyad</p>
                                        <p> <i class="mdi mdi-eye"></i> @item.Hit kez görüntülendi.</p>
                                        <p><a href="@Url.Action("BlogDetail","Home",new {id=item.Id})" class="btn btn-sm btn-dark text-warning"><strong><i class="uil uil-corner-down-right"></i> İncele</strong></a></p>
                                    </div>
                                    <!-- project title-->
                                   
                                    
                                </div>
                            </div> <!-- end card-body-->
                    </div>
                }
            </div>
            @if (Model.Count > 0)
            {
                <div class="float-end"><a href="@Url.Action("BlogListesi","Home")" class="btn btn-warning btn-sm text-dark"><strong>Tümünü Gör</strong></a></div>
            }
        </div>
    </div>
</div>