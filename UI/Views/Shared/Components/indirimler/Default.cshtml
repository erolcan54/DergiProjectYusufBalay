@model List<indirimDisplayDto>

<div class="row">
    <div class="card">
        <div class="card-body">

            <h3 class="header-title">ÖZEL İNDİRİMLER</h3><br />
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-3 col-xxl-3">
                        <!-- project card -->
                        <div class="card d-block">
                            <!-- project-thumbnail -->
                            <img class="card-img-top" style="height:200px;" src="@ByteToImage.DecodeImage(item.Resim)" alt="blog image cap">
                            <div class="card-body position-relative">
                                <div class="chart-widget-list mt-1 text-center">
                                    <p><strong>@item.KurumAdi</strong></p>
                                    <p>@item.ilAdi.ToUpper()</p>
                                    <p>@item.ilceAdi.ToUpper()</p>
                                    <p>Oran : <span class="badge badge-warning text-dark font-14">% @item.indirimOrani</span></p>
                                    <p>Son Başvuru : <span class="badge badge-warning text-dark font-14"> @Convert.ToDateTime(item.SonTarih).ToShortDateString()</span></p>
                                </div>
                            </div>
                        </div> <!-- end card-->
                    </div>
                }
            </div>
            @if (Model.Count > 0)
            {
                <div class="float-end"><a href="@Url.Action("indirimListesi","Home")" class="btn btn-warning btn-sm text-dark"><strong>Tümünü Gör</strong></a></div>
            }
        </div>

    </div>
</div>