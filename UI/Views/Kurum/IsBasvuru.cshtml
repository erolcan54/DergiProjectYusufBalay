@model List<isBasvuruDisplayDto>
@{
    Layout = "~/Views/Shared/_KurumLayout.cshtml";
}
<div class="row mt-1">
    <!-- Right Sidebar -->
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="mt-2">
                    <div class="row">
                    </div><hr />
                    @if (Model.Count > 0)
                    {
                        <table id="alternative-page-datatable" class="table dt-responsive nowrap w-100">
                            <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Kayıt Tarihi</th>
                                <th>Telefon</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Ad</td>
                                    <td>@item.Soyad</td>
                                    <td>@Convert.ToDateTime(item.CreatedDate).ToShortDateString()</td>
                              
                                    <td>@item.Telefon</td>
                                    <td>
                                        <a href="@Url.Action("OgretmenDetay","Kurum",new {id=item.Id})" class="btn btn-sm btn-info">Detay</a>
                                    </td>
                                </tr>
                            }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="body">
                            <div class="card-body">
                                <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                                    <strong>Uyarı - </strong> İlinzde iş başvurusu yapan öğretmen listesi boş.
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <!-- end row-->
            </div>
            <!-- end inbox-rightbar-->
        </div>
        <!-- end card-body -->
        <div class="clearfix"></div>
    </div> <!-- end card-box -->

</div> <!-- end Col -->
